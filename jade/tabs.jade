//- Create tabs with an icon and label, using the tabs-positive style.
//- Each tab's child <ion-nav-view> directive will have its own
//- navigation history that also transitions its views in and out.

ion-tabs.tabs-icon-top.tabs-color-active-positive

  //- Home Tab
  ion-tab(title='Home' icon-off='ion-home' icon-on='ion-home' href='#/tab/home')
    ion-nav-view(name='tab-home')

  //- Chats Tab
  ion-tab(title='Results' icon-off='ion-ios-chatboxes-outline' icon-on='ion-ios-chatboxes' href='#/tab/results')
    ion-nav-view(name='tab-results')

  //- Account Tab
  ion-tab(title='Game' icon-off='ion-star' icon-on='ion-star' href='#/tab/game')
    ion-nav-view(name='tab-game')
